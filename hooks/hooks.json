{
  "description": "Pensieve hooks: SessionStart injects system/user context; Stop enforces Loop continuation via task state",
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/inject-routes.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/loop-controller.sh"
          }
        ]
      }
    ]
  }
}
